@model List<WorkChart>

<table class="table table-hover">



    <tr>
        <th>Gazeteci</th>
        <th>Pazartesi</th>
        <th>Salı</th>
        <th>Çarşamba</th>
        <th>Perşembe</th>
        <th>Cuma</th>
    </tr>

    @foreach (WorkChart item in Model)
    {
        <tr>

            <td>@item.JournalistName</td>
            @foreach (bool doesItWork in item.Chart)
            {
                string x = doesItWork ? "X" : "";
                <td>@x</td>
            }

        </tr>
    }

</table>